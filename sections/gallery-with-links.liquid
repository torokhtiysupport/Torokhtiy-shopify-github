<div class="page-width">
  <div class="flex column-flex">
    {% for block in section.blocks %}
      <div class="flex__item flex {{ flex_size }}" {{ block.shopify_attributes }}>
        <a href="{{ block.settings.link }}" style="margin: 10px;">
          
        	<img class="image__galleryWlinks" src="{{ block.settings.image | img_url: '600x' }}">
        </a>
      </div>
    {% endfor %}
  </div>

  {% if section.blocks.size == 0 %}
    {% include 'no-blocks' %}
  {% endif %}
</div>

{% schema %}
  {
    "name": "Gallery with links",
    "class": "index-section",
    "max_blocks": 10,
    "blocks": [
      {
        "type": "link_block",
        "name": "Link block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "cta_label",
            "label": "Link label",
            "default": "Link label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Multiple link blocks",
        "category": "Image",
        "blocks": [
          {
            "type": "link_block"
          },
          {
            "type": "link_block"
          }
        ]
      }
    ]
  }
{% endschema %}